{
  "compilerOptions": {
    "outDir": "../lib/esm",
    "target": "es2015",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": false
  },
  "exclude": [
    "**/*.test.ts",
    "node_modules"
  ]
}