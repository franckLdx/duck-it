{
  "name": "duck-it",
  "version": "1.0.6",
  "description": "DuckDuckGo client for javascript/typescript",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "browser": "lib/cjs/browser.js",
  "typings": "lib/cjs/index.d.ts",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "package.json",
    "Readme.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "watch": "tsc --watch",
    "build": "tsc -p tsc -p src/tsconfig.cjs.json && tsc -p src/tsconfig.esm.json",
    "pretest": "npm run build",
    "test": "mocha --require ts-node/register src/**/*.test.ts",
    "coverage": "nyc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franckLdx/duck-it"
  },
  "keywords": [
    "node",
    "react",
    "browser",
    "typescript",
    "javascript",
    "duckduckgo"
  ],
  "authors": "FranckLdx (https://github.com/franckLdx)",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/franckLdx/duck-it/blob/master/LICENSE"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/franckLdx/duck-it/issues"
  },
  "homepage": "https://github.com/franckLdx/duck-it/blob/master/README.md",
  "devDependencies": {
    "@types/chai": "4.2.14",
    "@types/mocha": "8.2.0",
    "chai": "^4.2.0",
    "del": "6.0.0",
    "mocha": "8.2.1",
    "nyc": "15.1.0",
    "shelljs": "^0.8.3",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "tslint-clean-code": "^0.2.10",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "axios": "0.21.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.1"
  },
  "nyc": {
    "include": [
      "test/**/*.ts",
      "test/**/*.js"
    ],
    "extension": [
      ".ts",
      ".js"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
